extends ./layout.pug
block title
    title Aulas Particulares - Cerebelo Curso nota 10
block page-title
    span.text-semibold Horários e Agenda
    |  - Aulas Particulares
block theme-js-files
    script(type='text/javascript', src='assets/js/plugins/tables/datatables/datatables.min.js')
    script(type='text/javascript', src='assets/js/plugins/tables/datatables/extensions/tools.min.js')
    script(type='text/javascript', src='assets/js/plugins/forms/selects/select2.min.js')
    script(type='text/javascript', src='assets/js/plugins/notifications/bootbox.min.js')
    script(type='text/javascript', src='assets/js/plugins/notifications/sweet_alert.min.js')
    script(type='text/javascript', src='assets/js/core/app.js')
    script(type='text/javascript', src='assets/js/cerebelo_pages/aulas_particulares.js')
block breadcrumb
    li
        a(href='index.html')
            i.icon-home2.position-left
            |  Home
    li Horários e Agenda
    li.active Aulas Particulares
block content
    // /Listagem
    .panel.panel-white
        .panel-heading
            h6.panel-title Listagem de Aulas Particulares
            .heading-elements
                a.btn.btn-primary.mr-15(type='button' href="cadastrar_aula_particular.html")
                    i.icon-plus22
                    |  Cadastrar Aula Particular
                a.btn.btn-primary(type='button' href="cadastrar_professor_particular.html")
                    i.icon-plus22
                    |  Cadastrar Professor de Aula Particular
        .panel-body
