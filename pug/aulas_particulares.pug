            table.table.datatable-column-search-inputs.table-striped.table-hover
                thead
                    tr
                        th Auno
                        th Professor
                        th Disciplina
                        th Data
                        th Duração
                        th.text-center Actions
                tbody
                    - var n = 0;
                    while n < 16
                        - n++
                        tr
                            td Flávio Henrique
                            td Diogo Vieira
                            td Química
                            td 18/09/2016
                            td 11:00 - 12:40
                            +actions
                tfoot
                    tr
                        td.input-filter Auno
                        td.select-filter Professor
                        td.select-filter Disciplina
                        td.input-filter Data
                        td.input-filter Duração
                        td
mixin actions
    td.text-center
        ul.icons-list
            li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                    i.icon-menu9
                ul.dropdown-menu.dropdown-menu-right
                    li
                        a.editar(href='#').text-primary-800
                            i.icon-pencil3
                            |  Editar
                    li
                        a.excluir(href='#').text-danger-700
                            i.icon-cross3
                            |  Excluir
                    li
                        a.remarcar(href='#').text-green-800
                            i.icon-pushpin
                            |  Remarcar
                    li
                        a.desmarcar(href='#').text-slate-700
                            i.icon-exit
                            |  Desmarcar